<LoginScreen>:
    GridLayout:
        cols: 1
        padding: 15, 15
        spacing: 20, 20
        GridLayout:
            cols: 1
            padding: 15, 15
            spacing: 20, 20
            Label:
                text: "User login"
                font_size: '20sp'
            TextInput:
                id: user
                hint_text: "Username"
                size_hint: 1, 0.8
            TextInput:
                id: pas
                password: True
                hint_text: "Password"
                size_hint: 1, 0.8
            RelativeLayout:
                Button:
                    text: "Login"
                    on_press: root.login(root.ids.user.text, root.ids.pas.text)
                    size_hint: 0.3, 0.5
                    pos_hint: {'center_x': 0.5, 'center_y': 0.6}
            Label:
                id: fail
                text: ""
        GridLayout:
            cols: 2
            size_hint: 0.2, 0.2
            padding: 10, 10
            spacing: 10, 0
            RelativeLayout:
                Button:
                    size_hint: 0.7, 0.3
                    text: "Forgot Password?"
                    background_color: 275, 6, 1, 0
                    opacity: 1 if self.state == "normal" else 0.5
                    color: 0, 0, 1, 1
                    pos_hint: {'center_x': 0.25, 'center_y': 0}
            RelativeLayout:
                Button:
                    size_hint: 0.3, 0.3
                    text: "Sign Up"
                    background_color: 0, 0, 0, 1
                    opacity: 1 if self.state == "normal" else 0.5
                    on_press: root.sign_up()
                    color: 0, 0, 1, 1
                    pos_hint: {'center_x': 0.75, 'center_y': 0}

